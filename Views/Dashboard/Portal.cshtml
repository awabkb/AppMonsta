<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=11">
  <title>IMK - Admin Page</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/x-icon" href="~/favicon.png">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

  <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>

  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
    integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" media="screen" href="~/style/eds.min.css" />
  <link rel="stylesheet" type="text/css" media="screen" href="~/style/app.css" />
  
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css">
  <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>
</head>

<body class="light">

  <!-- System bar -->
  <header class="sysbar">
    <div class="items-container">
      <div class="item">
        <i class="icon icon-econ"></i>
        <span class="product">Installation Maintenance Kit</span>
        <span class="acronym">IMK</span>
      </div>
    </div>
    <div class="items-container">
      <div class="item notification-log-trigger">
        <span class="notification-log-number"></span>
        <i class="icon icon-notification"></i>
        <i class="icon icon-notification-ring"></i>
      </div>
      <div class="item hover settings-trigger">
        <i class="icon icon-profile"></i>
        <span>Admin</span>
      </div>
    </div>
  </header>

  <main>
    <!-- System panel -->
    <aside class="syspanel hidden">

      <!-- System panel: Settings -->
      <div class="settings">
        <div class="syspanel-top">
          <span class="syspanel-title"></span>
          <i class="syspanel-close icon icon-cross"></i>
        </div>
        <div class="row">
          <div class="column sm-12 container">

            <div class="profile">
              <i class="icon icon-profile"></i>
              <div class="username">@ViewBag.Username</div>
            </div>

            <div class="content">
              <div class="title">My settings</div>
              <div class="item">
                <div>
                  <div class="left"><a type="button" class="btn" asp-controller="Dashboard"
                      asp-action="Index">Dashboard</a></div>
                </div>
                <div class="right"></div>
              </div>
            </div>

            <div class="bottom">
              <a type="button" class="btn big" asp-area="MicrosoftIdentity" asp-controller="Account"
                asp-action="SignOut"><i class="icon icon-logout"></i>Signout</a>
            </div>
          </div>
        </div>
      </div>

      <!-- System panel: Notification log -->
      <div class="notification-log">
        <div class="syspanel-top">
          <span class="syspanel-title">Notifications</span>
          <i class="syspanel-close icon icon-cross"></i>
        </div>
        <div class="notification-log-container">
          <div class="notification-log-empty">No new notifications.</div>
        </div>
      </div>
    </aside>

    <!-- Application -->
    <div class="app" id="app">

      <!-- Application: Bar -->
      <nav class="appbar">
        <div class="actions-left">
          <div class="item">
            <i class="navigation-toggle closed"></i>
          </div>
          <div class="menu-anchor open-menu">Menu</div>
          <div class="title open-menu">
            <span class="title-name">Admin Page</span>
            @* <span class="subtitle">Page subtitle</span> *@
          </div>
        </div>
        <div class="actions-right"></div>
      </nav>

      <div class="appbody">

        <!-- Application: Navigation -->
        <div class="appnav">
          <div class="tree navigation">
            <ul id="menu">
              <li>
                <span class="title closed item">Users</span>
                <ul>
                  <li class="item menu-item" value="active-users">Active</li>
                  <li class="item menu-item" value="inactive-users">New</li>
                  <li class="item menu-item" value="deactived-users">Deactivated</li>
                </ul>
              </li>
              <li class="item menu-item" value="approvers">Approvers</li>
              <li class="item menu-item" value="asps">ASP Companies</li>
              <li class="item menu-item" value="ratings">User Ratings</li>
              <li class="item menu-item" value="logs">Logs</li>
            </ul>
          </div>
        </div>


        <!-- Application: Content -->
        <div class="appcontent">
          <div class="dialog" data-trigger="#add-approver" data-type="simple">
            <div class="content">
              <form class="eds-form" id="new-approver">
                <div class="form-header">
                  <div class="title">Add an approver</div>
                </div>

                <div class="form-body">
                  <div class="form-group">
                    <div class="form-group-title">Member info</div>

                    <div class="form-element">
                      <label for="name">Name</label>
                      <input type="text" id="member-name" name="name" placeholder="Enter full name">
                    </div>
                    <div class="form-element">
                      <label for="member-email">Email</label>
                      <input type="email" id="member-email" name="email" placeholder="Enter email">
                    </div>

                    <div class="form-element">
                      <label>Role</label>
                      <div>
                        <input id="admin" name="role" type="radio" value="Admin" checked>
                        <label for="admin">Admin</label>
                        <input id="manager" name="role" type="radio" value="Manager">
                        <label for="manager">Manager</label>
                        <input id="mentor" name="role" type="radio" value="Mentor">
                        <label for="mentor">Mentor</label>
                      </div>
                    </div>

                    <div class="form-element">
                      <label for="country">Country</label>
                      <div class="select" data-type="single" id="select-country" name="country">
                        <button type="button" class="btn current-options">Select option</button>
                        <div class="options-list approver"></div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="form-footer">
                  <button class="btn ghost" type="button" data-close="true">Cancel</button>
                  <button type="submit" class="btn primary" id="submit-approver" data-close="true">Add</button>
                </div>
              </form>
            </div>
          </div>




          <div class="dialog" data-trigger="#add-asp" data-type="simple">
            <div class="content">
              <form class="eds-form" id="new-asp">
                <div class="form-header">
                  <div class="title">Add ASP company</div>
                </div>

                <div class="form-body">
                  <div class="form-group">
                    <div class="form-group-title">ASP info</div>

                    <div class="form-element">
                      <label for="name">ASP Name</label>
                      <input type="text" id="asp-name" name="name" placeholder="Enter ASP name" required>
                    </div>

                    <div class="form-element">
                      <label for="a-country">Country</label>
                      <div class="select" data-type="single" id="select-country" name="a-country" aria-required="true">
                        <button type="button" class="btn current-options">Select option</button>
                        <div class="options-list asp"></div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="form-footer">
                  <button class="btn ghost" type="button" data-close="true">Cancel</button>
                  <button type="submit" class="btn primary" id="submit-asp" data-close="true">Add</button>
                </div>
              </form>
            </div>
          </div>

          <div class="dialog" data-trigger="#add-question" data-type="simple">
            <div class="content">
              <form class="eds-form" id="new-question">
                <div class="form-header">
                  <div class="title">Add Rating Statement</div>
                </div>

                <div class="form-body">
                  <div class="form-group">
                    <div class="form-group-title">Add New Statement for App Ratings</div>

                    <div class="form-element">
                      <label for="name">Issue/Complaint</label>
                      <textarea id="question-name" name="name" placeholder="Enter statement" required></textarea>
                    </div>
                  </div>
                </div>

                <div class="form-footer">
                  <button class="btn ghost" type="button" data-close="true">Cancel</button>
                  <button type="submit" class="btn primary" id="submit-question" data-close="true">Add</button>
                </div>
              </form>
            </div>
          </div>

          <!-- Tile 1 -->
          <div class="tile sm-12">


            <!------ Active Users ------>
            <div class="element" id="active-users" style="display:none">
              <div class="header">
                <div class="left">
                  <div class="title">Users</div>
                  <div class="subtitle">Active</div>
                </div>
                <div class="table-buttons">
                  <button class="btn" id="deactivate-users">Deactivate</button>
                  <button class="btn" id="export-ausers">Export</button>
                </div>
              </div>
              <div class="content text-sm">
                <div class="table-top">
                  <div class="table-top-left">
                    @* <input id="active-search" type="text" class="with-icon" onkeyup="searchTable(this.id, 'a-users')"
                      placeholder="Type to search...">
                    <div class="suffix icon-inside"><i class="icon icon-search"></i></div>
                    <div class="table-info ml-2"></div> *@
                          <div class="table-search">
      <input type="text" class="with-icon" placeholder="Search for...">
      <div class="suffix icon-inside"><i class="icon icon-search"></i></div>
    </div>
                  </div>
                </div>

                <table id="a-users" class="table"></table>
                @* <div class="table-bottom">
                  <div class="pagination-group">
                    <ul class="pagination"></ul>
                  </div>
                </div> *@
              </div>
            </div>

            <!------ Inactive Users ------>
            <div class="element" id="inactive-users" style="display:block">
              <div class="header">
                <div class="left">
                  <div class="title">Users</div>
                  <div class="subtitle">New</div>
                </div>
                <div class="table-buttons">
                  <button class="btn" id="activate-users">Activate</button>
                  <button class="btn" id="deactivate-iusers">Deactivate</button>
                  <button class="btn" id="export-iusers">Export</button>
                </div>
              </div>
              <div class="content text-sm">
                <div class="table-top">
                  <div class="table-top-left">
                    @* <input id="inactive-search" type="text" class="with-icon" onkeyup="searchTable(this.id, 'i-users')"
                      placeholder="Type to search...">
                    <div class="suffix icon-inside"><i class="icon icon-search"></i></div>
                    <div class="table-info ml-2"></div> *@
                  </div>
                </div>
                <table id="i-users" class="table"></table>
                @* <div class="table-bottom">
                  <div class="pagination-group">
                    <ul class="pagination"></ul>
                  </div>
                </div> *@
              </div>
            </div>


            <!------ Deactived Users ------>
            <div class="element" id="deactived-users" style="display:none">
              <div class="header">
                <div class="left">
                  <div class="title">Users</div>
                  <div class="subtitle">Deactivated</div>
                </div>
                <div class="table-buttons">
                  <button class="btn" id="reactivate-users">Activate</button>
                  <button class="btn" id="export-dusers">Export</button>
                </div>
              </div>
              <div class="content text-sm">
                <div class="table-top">
                  <div class="table-top-left">
                    @* <input id="deactivated-search" type="text" class="with-icon"
                      onkeyup="searchTable(this.id, 'd-users')" placeholder="Type to search...">
                    <div class="suffix icon-inside"><i class="icon icon-search"></i></div>
                    <div class="table-info ml-2"></div> *@
                  </div>
                </div>
                <table id="d-users" class="table"></table>
                @* <div class="table-bottom">
                  <div class="pagination-group">
                    <ul class="pagination"></ul>
                  </div>
                </div> *@
              </div>
            </div>

            <!------ Approvers ------>
            <div class="element" id="approvers" style="display:none">
              <div class="header">
                <div class="left">
                  <div class="title">ASP Approvers</div>
                  <div class="subtitle">Managers/Mentors</div>
                </div>
                <div class="table-buttons">
                  <button class="btn" id="add-approver">Add Approver</button>
                  <button class="btn" id="export-approvers">Export</button>
                </div>
              </div>
              <div class="content text-sm">
                <div class="table-top">
                  <div class="table-top-left">
                    @* <input id="approver-search" type="text" class="with-icon"
                      onkeyup="searchTable(this.id, 't-approvers')" placeholder="Type to search...">
                    <div class="suffix icon-inside"><i class="icon icon-search"></i></div>
                    <div class="table-info ml-2"></div> *@
                  </div>
                </div>
                <table id="t-approvers" class="table"></table>
                @* <div class="table-bottom">
                  <div class="pagination-group">
                    <ul class="pagination"></ul>
                  </div>
                </div> *@
              </div>
            </div>

            <!------ ASP ------>
            <div class="element" id="asps" style="display:none">
              <div class="header">
                <div class="left">
                  <div class="title">ASP Companies</div>
                </div>
                <div class="table-buttons">
                  <button class="btn" id="add-asp">Add ASP</button>
                  <button class="btn" id="export-asps">Export</button>
                </div>
              </div>
              <div class="content text-sm">
                <div class="table-top">
                  <div class="table-top-left">
                    @* <input id="asp-search" type="text" class="with-icon" onkeyup="searchTable(this.id, 't-asps')"
                      placeholder="Type to search...">
                    <div class="suffix icon-inside"><i class="icon icon-search"></i></div>
                    <div class="table-info ml-2"></div> *@
                  </div>
                </div>
                <table id="t-asps" class="table split-dashed"></table>
                @* <div class="table-bottom">
                  <div class="pagination-group">
                    <ul class="pagination"></ul>
                  </div>
                </div> *@
              </div>
            </div>
            <!------ Rating ------>
            <div class="element" id="ratings" style="display:none">
              <div class="header">
                <div class="left">
                  <div class="title">User Ratings</div>
                </div>
                <div class="table-buttons">
                  <button class="btn" id="add-question">Add Question</button>
                  <button class="btn" id="export-ratings">Export</button>
                </div>
              </div>
              <div class="content text-sm">
                <div class="table-top">
                  <div class="table-top-left">
                  </div>
                </div>
                <table id="t-ratings" class="table split-dashed"></table>
              </div>
            </div>
            <!------ Logs ------>
            <div class="element" id="logs" style="display:none">
              <div class="header">
                <div class="left">
                  <div class="title">Logs</div>
                  <div class="subtitle">Per Site Visit</div>
                </div>
                <div class="table-buttons">
                  <button class="btn" id="export-logs">Export</button>
                </div>
              </div>
              <div class="content text-sm">
                <div class="table-top">
                    <div class="row">
                      <div class="tile sm-12">
                    
                        <div class="header">
                          <div class="left">
                            <div class="title">Filter by</div>
                          </div>
                          <div class="right">
                            <div class="action" data-type="collapse">
                              <span class="pointer">
                                <i class="icon icon-filter"></i> Filter
                              </span>
                            </div>
                          </div>
                        </div>

                        <div class="content" id="logs-filter" style="display:none">
                            <div class="column sm-12">
                              <form class="eds-form horizontal" id="logs-form" style="padding:16px 10px; border:ridge; background-color:white">
                                <div class="row form-body">
                                    <div class="column sm-12 md-12 lg-4">
                                      <!--<div class="filter-group-title">Optional group title</div>-->
                                      <div class="form-element">
                                        <label>Site Name</label>
                                        <input type="text" placeholder="Enter site" class="" name="siteName">
                                      </div>
                                      <div class="form-element">
                                          <label>User</label>
                                          <input type="text" placeholder="Enter user name" class="" name="userName">
                                      </div>

                                      <div class="form-element">
                                        <label>Country</label>
                                          <input type="text" placeholder="Enter country" class="" name="country">
                                      </div>
                                    </div>
                                    <div class="column sm-12 md-12 lg-4">
                                      <!--<div class="filter-group-title">Optional group title</div>-->
                                      <div class="form-element">
                                        <label>From date</label>
                                        <div class="datepicker">

                                          <input type="text" placeholder="YYYY-MM-DD" name="datepicker-start" maxlength="10" class="with-icon">
                                          <div class="suffix icon-inside"><i class="icon icon-calendar"></i></div>

                                          <div class="calendar closed">
                                            <div class="head">
                                              <i class="icon icon-chevron-left"></i>
                                              <span class="month"></span>
                                              <i class="icon icon-chevron-right"></i>

                                              <i class="icon icon-chevron-left"></i>
                                              <span class="year"></span>
                                              <i class="icon icon-chevron-right"></i>
                                            </div>
                                            <table class="body">
                                              <!-- the body of the calendar is dynamically generated -->
                                            </table>
                                          </div>

                                          <input type="hidden" name="startDate" value="" id="start">
                                        </div>
                                      </div>

                                      <div class="form-element">
                                        <label>To date</label>
                                        <div class="datepicker">

                                          <input type="text" placeholder="YYYY-MM-DD" name="datepicker-end" maxlength="10" class="with-icon">
                                          <div class="suffix icon-inside"><i class="icon icon-calendar"></i></div>

                                          <div class="calendar closed">
                                            <div class="head">
                                              <i class="icon icon-chevron-left"></i>
                                              <span class="month"></span>
                                              <i class="icon icon-chevron-right"></i>

                                              <i class="icon icon-chevron-left"></i>
                                              <span class="year"></span>
                                              <i class="icon icon-chevron-right"></i>
                                            </div>
                                            <table class="body">
                                              <!-- the body of the calendar is dynamically generated -->
                                            </table>
                                          </div>

                                          <input type="hidden" name="endDate" value="" id="end">
                                        </div>
                                      </div>
                                    </div>
                                    <div class="column sm-12 md-12 lg-4">
                                      <div class="form-element">
                                        <label>Command</label>
                                        <input type="text" placeholder="Enter value" class="" name="command">
                                      </div>
                                      <div class="form-element">
                                        <label>Result includes</label>
                                        <input type="text" placeholder="Enter value" class="" name="result">
                                      </div>
                                    </div>  
                                  </div>
                                <div class="form-footer">
                                  <button class="btn" type="reset">Clear filters</button>
                                  <button class="btn primary" id="filter-btn">Apply filters</button>
                                </div>
                              </form>
                            </div>
                          </div>
                      </div>
                    </div>
                </div>
                <div class="loading large" id="loader" style="margin:auto; display:none"></div>
                <table id="t-logs" class="table"></table>
                <div class="table-bottom">
                  <div class="pagination-group">
                    <ul class="pagination"></ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </main>

  <script src="~/js/eds.min.js" charset="utf-8"></script>
  <script src="~/js/admin.js" charset="utf-8"></script>
  <script>init()</script>
</body>

</html>